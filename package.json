{
  "name": "vinci-auto-editor-pro",
  "version": "1.0.0",
  "description": "Professional Automated Video Editor",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-exe": "electron-builder --win nsis"
  },
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.21.0"
  },
  "build": {
    "appId": "com.vinci.autoeditor",
    "productName": "VinciAutoEditor",
    "asar": true,
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "asInvoker"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "bundle.js",
      "main.js",
      "package.json",
      "manifest.json"
    ]
  }
}