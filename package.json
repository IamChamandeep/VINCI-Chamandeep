{
  "name": "vinci-auto-editor-pro",
  "version": "1.0.0",
  "description": "Professional Automated Video Editor for YouTube Automation",
  "main": "build_temp/main.js",
  "scripts": {
    "start": "electron .",
    "build-exe": "electron-builder --win nsis"
  },
  "author": "Chamandeep Singh",
  "license": "MIT",
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.21.0"
  },
  "build": {
    "appId": "com.vinci.autoeditor",
    "productName": "VinciAutoEditor",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "shortcutName": "Vinci Auto-Editor"
    },
    "files": [
      "build_temp/**/*",
      "node_modules/**/*"
    ]
  }
}